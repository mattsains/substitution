%script{:type=>"text/javascript", :src=>url("http://code.jquery.com/jquery-1.10.1.min.js")}
%script{:type=>"text/javascript", :src=>url("http://code.jquery.com/ui/1.10.3/jquery-ui.js")}
%link{:rel=>"stylesheet", :type=>"text/css", :href=>url("http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css")}

%p="You are filing for substitution. Please select when you will be away"
-if @err
   %span.err&=@err
%form{:action=>"#", :method=>"post"}
   %div
      %label.fixed_width{:for=>"name"}="For:"
      %input{:type=>"text", :name=>"name", :disabled=>true, :value=>@teacher.name}
   %div
      %label.fixed_width{:for=>"reason"}="Reason: "
      %textarea{:name=>"reason"}
   %div
      %label.fixed_width{:for=>"date"}="Start Date:"
      %input#date{:type=>"text",:name=>"date"}
      %script
         ="$('#date').datepicker({dateFormat: 'd MM yy'});"
      %style
         =".ui-datepicker{font-size: 70%; }"
   %input{:type=>"submit"}